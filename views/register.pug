extends layout

block content
    .container
        form(action="/register" method="POST")
            
            label(for='exampleInputEmail1') User Name
            input#registerUsername.form-control(type="text" name="username" placeholder="Username" required="")
            
            label(for='exampleInputEmail1') Email address
            input#registerEmail.form-control(type='email' name="email" aria-describedby='emailHelp' placeholder='Enter email')
            small#emailHelp.form-text.text-muted
                | We&apos;ll never share your email with anyone
                | else.
            
            label(for='exampleInputPassword1') Password
            input#registerPassword1.form-control(type="password" name="password" placeholder="Password" required="")
            
            label(for='exampleInputPassword1') Confirm Passwrod
            input#registerPassword2.form-control(type="password" name="confirmPassword" placeholder="Repeat password" required="")
            button.btn.btn-primary#register Register




